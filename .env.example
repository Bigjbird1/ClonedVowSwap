# .env.example

# -----------------------------------------------------------------------------
# Clerk Configuration (https://docs.clerk.dev/setup)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# -----------------------------------------------------------------------------
# The base URL - use localhost here and then change it in your production environment
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# MongoDB Configuration (https://www.mongodb.com/cloud/atlas)
# -----------------------------------------------------------------------------
MONGODB_URI=your_mongodb_uri

# -----------------------------------------------------------------------------
# The Clerk Webhook for User Created Event
# -----------------------------------------------------------------------------
WEBHOOK_SECRET_USER_CREATED=your_webhook_secret

# -----------------------------------------------------------------------------
# Google Tag Manager Configuration (https://tagmanager.google.com/)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GTM_ID=GTM-XXXXXX

# -----------------------------------------------------------------------------
# Stripe Configuration (https://stripe.com/docs/keys)
# -----------------------------------------------------------------------------
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# -----------------------------------------------------------------------------
# SendGrid Configuration (https://www.twilio.com/docs/sendgrid)
# -----------------------------------------------------------------------------
SENDGRID_KEY=your_sendgrid_key

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# -----------------------------------------------------------------------------
# Postgres Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_URL=your_postgres_url
POSTGRES_PRISMA_URL=your_postgres_prisma_url
POSTGRES_URL_NON_POOLING=your_postgres_url_non_pooling
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=your_postgres_host
POSTGRES_DATABASE=your_postgres_database

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Select which database to use:
# - "mongodb" for MongoDB (default)
# - "supabase" for Supabase
# Example: DATABASE_TYPE=mongodb
DATABASE_TYPE=supabase
